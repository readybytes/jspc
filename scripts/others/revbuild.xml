<?xml version="1.0" encoding="UTF-8"?>
<project name="Copying JSPC data to SVN" basedir="." default="copy_to_svn">
 
        <property name="target" value="local.repository.location" override="true" />
        <property name="source" value="${project.basedir}" override="true" />
        
        <!-- Copy Target -->
        <target name="copy_to_svn" description="copy target">
                
                <copy   file="${source}/language/en-GB/en-GB.com_jspc.ini" 
                        tofile="${source}/components/com_userlist/en-GB.com_jspc.ini" 
                         />
                <copy   file="${source}/administrator/language/en-GB/en-GB.com_jspc.ini" 
                        tofile="${source}/administrator/components/com_userlist/en-GB.com_jspc.ini" 
                         />

                
		<copy todir="${target}/source/compoents/com_jspc/admin">
			<fileset dir="${source}/administrator/components/com_jspc">
				<include name="**/*.*" />
			</fileset>
                 </copy>
                
                <copy todir="${target}/com_jspc/site">
					<fileset dir="${source}/components/com_jspc">
						<include name="**/*.*" />
					</fileset>
                 </copy>        
 
                 <copy todir="${target}/source/plugins/plg_jspc">
					<fileset dir="${source}/plugins/community/">
						<include name="jspc.*" />
						<include name="jspc/**/*.*" />
					</fileset>
                 </copy>

		<copy file="${source}/administrator/language/en-GB/en-GB.plg_jspc.ini"
                        tofile="${target}/source/plugins/plg_jspc/en-GB.plg_jspc.ini"
                 />
                         
                 <copy todir="${target}/source/modules/mod_jspc">
					<fileset dir="${source}/modules/mod_jspc/">
						<include name="**/*.*" />
					</fileset>
                 </copy>

		<copy file="${source}/language/en-GB/en-GB.mod_jspc.ini"
                        tofile="${target}/source/modules/mod_userlist/en-GB.mod_jspc.ini"
                 />

		<copy todir="${target}/test">
					<fileset dir="${source}/test/">
						<include name="**/*.*" />
					</fileset>
                 </copy>

		  <copy   file="${source}/build.xml" 
                        tofile="${target}/scripts/others/revbuild.xml" 
                         />



        </target>
</project>
