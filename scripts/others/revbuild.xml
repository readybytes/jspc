<?xml version="1.0" encoding="UTF-8"?>
<project name="Copying JSUL data to SVN" basedir="." default="copy_to_svn">
 
        <property name="target" value="/home/rbsl/jsul1.5_trunk/source" override="true" />
        <property name="source" value="${project.basedir}" override="true" />
        
        <!-- Copy Target -->
        <target name="copy_to_svn" description="copy target">
                
                <copy   file="${source}/language/en-GB/en-GB.com_userlist.ini" 
                        tofile="${source}/components/com_userlist/en-GB.com_userlist.ini" 
                         />
                <copy   file="${source}/administrator/language/en-GB/en-GB.com_userlist.ini" 
                        tofile="${source}/administrator/components/com_userlist/en-GB.com_userlist.ini" 
                         />

                
		<copy todir="${target}/com_userlist/admin">
			<fileset dir="${source}/administrator/components/com_userlist">
				<include name="**/*.*" />
			</fileset>
                 </copy>
                
                <copy todir="${target}/com_userlist/site">
					<fileset dir="${source}/components/com_userlist">
						<include name="**/*.*" />
					</fileset>
                 </copy>        
 
                 <copy todir="${target}/plg_userlist">
					<fileset dir="${source}/plugins/community/">
						<include name="userlist.*" />
						<include name="userlist/**/*.*" />
					</fileset>
                 </copy>

		<copy file="${source}/administrator/language/en-GB/en-GB.plg_userlist.ini"
                        tofile="${target}/plg_userlist/en-GB.plg_userlist.ini"
                 />
                         
                 <copy todir="${target}/mod_userlist">
					<fileset dir="${source}/modules/mod_userlist/">
						<include name="**/*.*" />
					</fileset>
                 </copy>

		<copy file="${source}/language/en-GB/en-GB.mod_userlist.ini"
                        tofile="${target}/mod_userlist/en-GB.mod_userlist.ini"
                 />

		<copy todir="${target}/../test">
					<fileset dir="${source}/test/">
						<include name="**/*.*" />
					</fileset>
                 </copy>

		  <copy   file="${source}/build.xml" 
                        tofile="${target}/../scripts/others/revbuild.xml" 
                         />



        </target>
</project>
