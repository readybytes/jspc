<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" group="community" client="site" method="upgrade">
	<name>JoomlaXi Profile Completion Status</name>
	<author>Team Joomlaxi</author>
	<creationDate>4th Aug 2009</creationDate>
	<copyright>Copyright (C) 2008. All rights reserved.</copyright>
	<license>http://www.joomlaxi.com</license>
	<authorEmail>shyam@joomlaxi.com</authorEmail>
	<authorUrl>www.joomlaxi.com</authorUrl>
	<version>@global.version@.@svn.lastrevision@</version>
	<description>MOD_JSPC_XML_DESCRIPTION</description>
	
	<languages>
	    <language tag="en-GB">en-GB.mod_jspc.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_JSPC" />
	<files>
		<file module="mod_jspc">mod_jspc.php</file>
		<file >style.css</file>
		<file >style.vert.css</file>
		<file >helper.php</file>
	</files>
	
	<config>
	<fields name="params" addfieldpath="/administrator/components/com_jspc/fields">
			<fieldset name="basic">
				<field	name="SPS_Layout" 
						type="list" 
						default="horizontal" 
						label="Layout" 
						description="">
						<option value="horizontal">Horizontal</option>
						<option value="vertical">Vertical</option>
				</field>
				
				<field 	name="SPS_ShowAvatar" 
						type="list" 
						default="1" 
						label="Show Avatar" 
						description="">
						<option value="0">No</option>
						<option value="1">Yes</option>
				</field>
				
				<field 	name="SPS_AvatarWidth" 
						type="text" 
						default="100" 
						label="Width of Avatar in Pixel" 
						description=""/>
				
				<field 	name="SPS_AvatarHeight" 
						type="text" 
						default="100" 
						label="Height of Avatar in Pixel" 
						description=""/>
				
				<field 	name="showProfile" 
						type="list" 
						default="1" 
						label="Show Module when 100% Status" 
						description="Do you want to show Plugin when user's Profile is 100% complete?">
						<option value="0">No</option>
						<option value="1">Yes</option>
				</field>
				
				<field 	name="SPS_VisibleFeatureNumber" 
						type="text" 
						default="All" 
						label="Number of Visible Feature to complete Profile" 
						description="Write all to display all feature else write count" />
				
				<field 	name="moduleclass_sfx" 
						type="text" 
						default="" 
						label="Module Class Suffix" 
						description="PARAMMODULECLASSSUFFIX" /> 
			</fieldset>
		</fields>
	</config>

</extension>
