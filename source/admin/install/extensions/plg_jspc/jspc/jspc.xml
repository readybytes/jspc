<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="community">
	<name>Profile Completion Status</name>
	<author>Team Joomlaxi</author>
	<creationDate>24th July 2009</creationDate>
	<copyright>Copyright (C) 2008. All rights reserved.</copyright>
	<license>http://www.joomlaxi.com</license>
	<authorEmail>shyam@joomlaxi.com</authorEmail>
	<authorUrl>www.joomlaxi.com</authorUrl>
	<version>3.0.100</version>
	<isapplication>true</isapplication>
	<description>
		This plugin Shows Profile Completion Status for JomSocial. 
		You required to install JomSocial and ProfileCompletion to get this working.
	</description>
	
	<languages>
	    <language tag="en-GB">en-GB.plg_jspc.ini</language>
	</languages>
	
	<files>
		<file plugin="jspc">jspc.php</file>
		<file plugin="jspc">jspc/index.html</file>
		<file plugin="jspc">jspc/style.css</file>
	</files>
	
	<params addpath="/administrator/components/com_jspc/elements" >
		<param name="coreapp" type="list" default="1" label="Core Application" description="Causes this application to not appear in the users applications list but it will allow this application to appear in the user profile automatically if selected.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this plugin">
			<option value="1">Use Global</option>
			<option value="0">No</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="Configure Avatar" description="" />		
		<param name="SPS_ShowAvatar" type="list" default="1" label="Show Avatar" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="SPS_AvatarWidth" type="text" default="75" label="Width of Avatar in Pixel" description=""/>
		<param name="SPS_AvatarHeight" type="text" default="75" label="Height of Avatar in Pixel" description=""/>
				
		<param name="@spacer" type="spacer" default="" label="Configure Completion Bar" description="" />		
		<param name="SPS_Length" type="text" default="200" label="Length of Completion bar in pixels" description=""/>
		<param name="SPS_Height" type="text" default="25"  label="Height of Completion bar in pixels" description=""/>
		<param name="SPS_FontSize" type="list" default="3" label="Font Size of text" description="">
			<option value="1">Tiny</option>
			<option value="2">Small</option>
			<option value="3">Normal</option>
			<option value="4">Big</option>
			<option value="5">Very Big</option>
			<option value="6">Huge</option>
			<option value="7">Very Huge</option>
		</param>
		<param name="SPS_FGColor"  type="colorbox" default="9CD052"  label="Fill Bar Color" description=""/>
		<param name="SPS_BGColor"  type="colorbox" default="FFFFFF"  label="Empty Bar Color" description=""/>
		<param name="SPS_SLColor"  type="colorbox" default="000000"  label="Side Line Color" description=""/>
		<param name="SPS_STRColor" type="colorbox" default="FFFFFF"  label="Text Color" description=""/>
		<param name="SPS_ImageDebugMode" type="list" default="0" label="Always Regenerate Completeness Image" description="" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="showProfile" type="list" default="1" label="Show Plugin when 100% Status" description="Do you want to show Plugin when user's Profile is 100% complete?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="SPS_VisibleFeatureNumber" type="text" default="All" label="Number of Visible Feature to complete Profile" description="Write All to display all feature else write count" />
	</params>
	
	<!-- for J1.6 ++ -->
	<config>
		<fields name="params" addfieldpath="/administrator/components/com_jspc/fields">
			<fieldset name="basic">
				<field name="coreapp" type="list" default="1" label="Core Application" description="Causes this application to not appear in the users applications list but it will allow this application to appear in the user profile automatically if selected.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this plugin">
					<option value="1">Use Global</option>
					<option value="0">No</option>
				</field>
				<field name="@spacer" type="spacer" default="" label="Configure Avatar" description="" />		
				<field name="SPS_ShowAvatar" type="list" default="1" label="Show Avatar" description="">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="SPS_AvatarWidth" type="text" default="75" label="Width of Avatar in Pixel" description=""/>
				<field name="SPS_AvatarHeight" type="text" default="75" label="Height of Avatar in Pixel" description=""/>
						
				<field name="@spacer" type="spacer" default="" label="Configure Completion Bar" description="" />		
				<field name="SPS_Length" type="text" default="200" label="Length of Completion bar in pixels" description=""/>
				<field name="SPS_Height" type="text" default="25"  label="Height of Completion bar in pixels" description=""/>
				<field name="SPS_FontSize" type="list" default="3" label="Font Size of text" description="">
					<option value="1">Tiny</option>
					<option value="2">Small</option>
					<option value="3">Normal</option>
					<option value="4">Big</option>
					<option value="5">Very Big</option>
					<option value="6">Huge</option>
					<option value="7">Very Huge</option>
				</field>
				<field name="SPS_FGColor"  type="colorbox" default="9CD052"  label="Fill Bar Color" description=""/>
				<field name="SPS_BGColor"  type="colorbox" default="FFFFFF"  label="Empty Bar Color" description=""/>
				<field name="SPS_SLColor"  type="colorbox" default="000000"  label="Side Line Color" description=""/>
				<field name="SPS_STRColor" type="colorbox" default="FFFFFF"  label="Text Color" description=""/>
				<field name="SPS_ImageDebugMode" type="list" default="0" label="Always Regenerate Completeness Image" description="" >
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="showProfile" type="list" default="1" label="Show Plugin when 100% Status" description="Do you want to show Plugin when user's Profile is 100% complete?">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="SPS_VisibleFeatureNumber" type="text" default="All" label="Number of Visible Feature to complete Profile" description="Write All to display all feature else write count" />
			</fieldset>
		</fields>
	</config>
</install>
